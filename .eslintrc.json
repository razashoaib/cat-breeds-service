{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
        "indent" : [1, 4],
        "no-use-before-define": "off",
        "max-len": ["error", { "code": 110 }],
        "consistent-return": 2,
        "no-else-return"   : 1,
        "semi"             : [1, "always"],
        "space-unary-ops"  : 2,
        "no-loop-func":"off"
    }
}